{% extends 'disposition_standard.html.twig' %}

{% block title %}Handi'chiens - Les chiens{% endblock %}

{% block contenu %}
    <h1 class="titre__disponibilites">Les chiens</h1>
    
    {% set bouton_ajouter_path = path('app_chien_ajouter') %}
    {{ component('bouton', {href: bouton_ajouter_path, texte: 'Ajouter un chien'}) }}

    {% if chiens is empty %}
        <p>Aucun chien !</p>
    {% else %}
        <table>
            <caption>Liste des chiens</caption>

            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Date de naissance</th>
                </tr>
            </thead>

            <tbody>
            {% for chien in chiens %}
                <tr>
                    <td>{{ chien.nom }}</td>
                    <td>{{ chien.dateNaissance | date('d/m/y') }}</td>
                    <td><a href="{{ path('app_chien_details', {chien: chien.id}) }}">DÃ©tails</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
