{# Les disponibilités d'une famille #}

{% extends 'disposition_standard.html.twig' %}

{% block title %}Handi'chiens - Disponibilités de la famille {{ famille.nom }}{% endblock %}

{% block body %}

    {# read and display all flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            {{ component( 'flash', {
                type:  label ,
                message:  message 
                })
            }}
        {% endfor %}
    {% endfor %}

    <h1>
        {% if is_granted("ROLE_EDUCATEUR") %}
            Disponibilités de la famille {{ famille.nom }}
        {% else %}
            Vos disponibilités
        {% endif %}
    </h1>

    <a href="{{ path('app_mes_disponibilites_ajouter') }}">Nouvelle disponibilité</a>


    {% for dispo in famille.disponibilites %}
        {{ dump(dispo) }}
    {% endfor %}

{% endblock %}
