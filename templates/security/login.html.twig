{% extends 'disposition_standard.html.twig' %}

{% block title %}Connexion{% endblock %}

{# TODO : Formulaire d'authentification (+ CSS) #}

{% block contenu %}
<form class="carte carte__visiteur" method="post">
    {% if error %}
        <div class="flash flash__error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_deconnexion') }}">Se déconnecter</a>
        </div>
    {% endif %}

    <h1 class="titre titre__connexion">Connexion</h1>
    <div class="form">
        <div class="form__element">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>
        <div class="form__element">
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <a href="{{ path('app_forgot_password_request') }}">J'ai oublié mon mot de passe !</a>

    <button class="bouton bouton__principal" type="submit">
        Se connecter
    </button>
</form>
{% endblock %}
